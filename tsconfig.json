{
  "compilerOptions": {
    "rootDirs": ["."],
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@lib/*": ["apps/lib/*"],
      "@vaults/*": ["apps/vaults/*"],
      "@vaults-v2/*": ["apps/vaults-v2/*"],
      "@vaults-v3/*": ["apps/vaults-v3/*"],
      "@landing/*": ["apps/landing/*"],
      "/src/*": ["src/*"]
    },
    /* Basic Options */
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["es6", "es7", "ESNext", "dom"],
    "allowJs": true,
    "jsx": "preserve",
    "removeComments": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "types": ["vite/client"]
  },
  "exclude": ["node_modules", "_app", "api", "worktrees"],
  "include": [
    "**/*.css",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.tsx",
    "public",
    "postcss.config.js",
    "tailwind.config.js",
    "vite.config.ts",
    "vitest.config.ts",
    "worker/index.js",
    "env.d.ts"
  ]
}
